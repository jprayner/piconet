{
  "name": "@jprayner/piconet-ts",
  "version": "0.0.1",
  "description": "JavaScript/TypeScript driver for Piconet: a USB interface for the Acorn/BBC Econet based on the Raspberry Pi Pico microprocessor.",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "jest --detectOpenHandles --coverage --config=jest.config.js",
    "lint": "prettier --check . && eslint . --ext .ts,.js",
    "lint:fix": "prettier --write . && eslint --fix . --ext .ts,.js"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.{css,json,md,yml,graphql}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:jprayner/piconet.git"
  },
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/jprayner/piconet",
  "dependencies": {
    "@serialport/bindings-cpp": "^10.8.0",
    "@serialport/parser-readline": "^10.5.0",
    "serialport": "^10.5.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-n": "^15.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-yml": "^1.0.0",
    "gql-generator": "^1.0.16",
    "jest": "^27.5.1",
    "jest-html-reporters": "^3.0.5",
    "jest-junit": "^13.0.0",
    "jest-mock-extended": "^2.0.9",
    "prettier": "^2.7.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.7.3"
  },
  "engines": {
    "node": "16",
    "npm": ">=7"
  },
  "standard": {
    "env": [
      "jest",
      "node"
    ]
  }
}
